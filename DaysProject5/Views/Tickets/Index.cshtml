@model IEnumerable<ModelLayer.Models.Ticket>

@{
    ViewBag.Title = "Home Ticket";
}

<section class="content-header">
    <h1>
        Tickets
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Tickets</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="panel-heading">
            <h3>Tickets</h3>
        </div>
    </div>
    <div class="box">
        <div class="box-body">
            <div class="table-responsive">
                <a href="@Url.Action("Create", "Tickets")" class="btn btn-primary" style="background-color:#e3e3e3; border-color:#e3e3e3;"><i class="fa fa-plus"></i> </a>
                <div id="ticketTable">
                </div>
            </div>
        </div>
</section>

<script>
    //var getTickets = $.ajax({
    //    type: 'GET',
    //    url: 'Tickets/GetTickets/',
    //    async: false,
    //    dataType: 'json'
    //}).responseJSON.Data;

    var ticketSource = new kendo.data.DataSource({
        transport: {
            read: {
                url: '/Tickets/GetTickets/',
                dataType: "json"
            },
            update: {
                url: '/Tickets/Update/',
                dataType: "json",
                type: "post",
                contentType: 'application/json; charset=utf-8'
            },
            create: {
                url: '/Tickets/Create/',
                dataType: "json",
                type: "post",
                contentType: 'application/json; charset=utf-8'
            },
            parameterMap: function (options, operation) {
                if (operation !== "read") {
                    return kendo.stringify(options);
                }
            }
        },
        batch: false,
        pageSize: 20,
        schema: {
            model: {
                id: "ID",
                fields: {
                    ID: { editable: false, nullable: true },
                    Name: { validation: { required: true } },
                    Email: { validation: { required: true } },
                    Payment: { type: "number", validation: { required: true, min: 1 } },
                    Movie: { validation: { required: true } },
                    Theater: { validation: { required: true } }
                }
            }
        }
    });

    $(document).ready(function () {

        $("#ticketTable").kendoGrid({
            columns:
            [
                {
                    field: "ID",
                    title: "ID"
                },
                {
                    field: "Name",
                    title: "Name"
                },
                {
                    field: "Email",
                    title: "Email"
                },
                {
                    field: "Payment",
                    title: "Payment",
                    template: '# if( Payment == 1 ){ # Cash # } else if( Payment == 2 ) { # Debit # } else { # Credit # } #'
                },
                {
                    field: "Movie",
                    title: "Movie"
                },
                {
                    field: "Theater",
                    title: "Theater"
                },
                {
                    command:
                    [
                        "destroy"
                    ],
                    width: "180px"
                }
            ],
            toolbar: ["create", "save", "cancel"],
            dataSource: ticketSource,
            groupable: true,
            sortable: true,
            pageable: true,
            editable: true
        });
    });
</script>